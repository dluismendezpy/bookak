@model IEnumerable<BooksAdministration.Models.Book>
@{
    ViewData["Title"] = "Book List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    @if (TempData["message"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            @TempData["message"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <div class="row">
        <div class="col-sm-6">
            <h3>Coose</h3>
        </div>
        <div class="col-sm-6">
            <a class="btn btn-success d-block" asp-action="Create" asp-controller="Books">Add a new book</a>
        </div>
    </div>
    <div class="row">
        @if (Model.Count() > 0)
        {
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(m => m.Id)</th>
                        <th>@Html.DisplayNameFor(m => m.Title)</th>
                        <th>@Html.DisplayNameFor(m => m.Description)</th>
                        <th>@Html.DisplayNameFor(m => m.Author)</th>
                        <th>@Html.DisplayNameFor(m => m.Price)</th>
                        <th>@Html.DisplayNameFor(m => m.Created_At)</th>
                        <th>Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th>@item.Id</th>
                            <td>@item.Title</td>
                            <td>@item.Description</td>
                            <td>@item.Author</td>
                            <td>@item.Price</td>
                            <td>@item.Created_At</td>
                            <td>
                                <a asp-controller="Books" asp-action="Edit" asp-route-id="@item.Id"
                            class="btn btn-warning">Edit</a>
                                <a asp-controller="Books" asp-action="Delete" asp-route-id="@item.Id"
                            class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div>
                <p>No data found</p>
            </div>
        }
    </div>
</div>
