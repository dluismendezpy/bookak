@model BooksAdministration.Models.Book

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>Create</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-12">
            <form method="post" asp-action="create">
                <div class="form-group">
                    <label asp-for="Title" class="control-label" />
                    <input asp-for="Title" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label" />
                    <input asp-for="Description" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Author" class="control-label" />
                    <input asp-for="Author" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label" />
                    <input asp-for="Price" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Created_At" class="control-label" />
                    <input asp-for="Created_At" class="form-control" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Add" class="btn btn-primary" />
                </div>
            </form>
        </div>    
    </div>
</div>
